<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>Banyan Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>

    <!-- mq server -->
    <service name="requestRabbitmqInfoService" engine="java" location="org.ofbiz.banyan.service.RabbitmqService" invoke="getRabbitmqServerOverview">
        <description>request rabbitmq info service</description>
        <attribute name="result" type="String" mode="OUT" optional="false" />
    </service>

    <!-- app -->
    <service name="createAppService" engine="java" location="org.ofbiz.banyan.service.AppService" invoke="createApp">
        <description>Create a app</description>
        <attribute name="name" type="java.lang.String" mode="IN" optional="false" />
    </service>
    <service name="updateAppService" engine="java" location="org.ofbiz.banyan.service.AppService" invoke="updateApp">
        <description>Update a node</description>
        <attribute name="appId" type="java.lang.String" mode="INOUT" optional="false" />
        <attribute name="name" type="java.lang.String" mode="IN" optional="false" />
    </service>
    <service name="deleteAppService" engine="java" location="org.ofbiz.banyan.service.AppService" invoke="deleteApp">
        <description>Delete a node</description>
        <attribute name="appId" type="java.lang.String" mode="IN" optional="false" />
    </service>

    <!-- node & queue -->
    <service name="createQueueService" engine="java" location="org.ofbiz.banyan.service.QueueService" invoke="createQueue">
        <description>Create a queue</description>
        <attribute name="name" type="java.lang.String" mode="IN" optional="false" />
        <attribute name="carryType" type="java.lang.String" mode="IN" optional="false" />
        <attribute name="appId" type="java.lang.String" mode="IN" optional="false" />
        <attribute name="rateLimit" type="java.lang.String" mode="IN" optional="true" />
        <attribute name="threshold" type="java.lang.String" mode="IN" optional="true" />
        <attribute name="msgBodySize" type="java.lang.String" mode="IN" optional="true" />
        <attribute name="ttl" type="java.lang.String" mode="IN" optional="true" />
        <attribute name="ttlPerMsg" type="java.lang.String" mode="IN" optional="true" />
        <attribute name="canBroadcast" type="java.lang.String" mode="IN" optional="true" />
    </service>
    <service name="deleteNodeService" engine="java" location="org.ofbiz.banyan.service.NodeService" invoke="deleteNode">
        <description>Delete a node</description>
        <attribute name="nodeId" type="java.lang.String" mode="IN" optional="false" />
    </service>
    <service name="updateQueueService" engine="java" location="org.ofbiz.banyan.service.QueueService" invoke="updateQueue">
        <description>update a queue</description>
        <attribute name="nodeId" type="String" mode="IN" optional="false" />
        <attribute name="name" type="java.lang.String" mode="IN" optional="false" />
        <attribute name="available" type="java.lang.String" mode="IN" optional="false" />
        <attribute name="canBroadcast" type="java.lang.String" mode="IN" optional="false" />
    </service>
    <service name="auditQueueService" engine="java" location="org.ofbiz.banyan.service.QueueService" invoke="auditQueue">
        <description>audit queue service</description>
        <attribute name="queueId" type="String" mode="IN" optional="false" />
    </service>


    <!-- queue rate -->
    <service name="getQueueRateWarningListService" engine="java" location="org.ofbiz.banyan.service.QueueService" invoke="getQueueRateWarningsById">
        <description>filter queue rate warning list </description>
        <attribute name="entityName" type="String" mode="IN" optional="false"/>
        <attribute name="inputFields" type="java.util.Map" mode="IN" optional="false"/>
        <attribute name="fieldList" type="java.util.List" mode="IN" optional="true"/>
        <attribute name="orderBy" type="String" mode="IN" optional="true"/>
        <attribute name="noConditionFind" type="String" mode="IN" optional="true"><!-- find with no condition (empty entityConditionList) only done when this is Y --></attribute>
        <attribute name="distinct" type="String" mode="IN" optional="true"><!-- distinct find only done when this is Y --></attribute>
        <attribute name="filterByDate" type="String" mode="IN" optional="true"/>
        <attribute name="filterByDateValue" type="Timestamp" mode="IN" optional="true"/>
        <attribute name="viewIndex" type="Integer" mode="IN" optional="true"/>
        <attribute name="viewSize" type="Integer" mode="IN" optional="true"/>
        <attribute name="listIt" type="org.ofbiz.entity.util.EntityListIterator" mode="OUT" optional="true"/>
        <attribute name="listSize" type="Integer" mode="OUT" optional="true"/>
        <attribute name="queryString" type="String" mode="OUT" optional="true"/>
        <attribute name="queryStringMap" type="java.util.Map" mode="OUT" optional="true"/>
    </service>

    <!-- config -->
    <service name="createConfigItemService" export="true" engine="java" location="org.ofbiz.banyan.service.ConfigService" invoke="createConfigItem">
        <description>create config item service</description>
        <attribute name="itemKey" type="String" mode="IN" optional="false" />
        <attribute name="itemValue" type="String" mode="IN" optional="false" />
        <attribute name="type" type="String" mode="IN" optional="false" />
    </service>
    <service name="updateConfigItemService" export="true" engine="java" location="org.ofbiz.banyan.service.ConfigService" invoke="updateConfigItem">
        <description>update config item service</description>
        <auto-attributes mode="IN" entity-name="Config" optional="false" />
    </service>
    <service name="removeConfigItemService" export="true" engine="java" location="org.ofbiz.banyan.service.ConfigService" invoke="removeConfigItem">
        <description>remove config item service</description>
        <attribute name="configId" type="String" mode="IN" optional="false" />
    </service>

    <!-- sink -->
    <service name="createSinkService" export="true" engine="java" location="org.ofbiz.banyan.service.SinkService" invoke="createSink">
        <auto-attributes mode="IN" entity-name="Sink" optional="false">
            <exclude field-name="sinkId" />
            <exclude field-name="token" />
            <exclude field-name="enable" />
            <exclude field-name="creator" />
            <exclude field-name="auditTypeCode" />
            <exclude field-name="fromCommunicateType" />
            <exclude field-name="toCommunicateType" />
        </auto-attributes>
    </service>
    <service name="auditSinkService" export="true" engine="java" location="org.ofbiz.banyan.service.SinkService" invoke="auditSink">
        <description>audit sink service</description>
        <attribute name="sinkId" type="String" mode="IN" optional="false" />
    </service>
    <service name="switchSinkService" export="true" engine="java" location="org.ofbiz.banyan.service.SinkService" invoke="switchSink">
        <description>switch sink service</description>
        <attribute name="sinkId" type="String" mode="IN" optional="false" />
    </service>
    <service name="removeSinkService" export="true" engine="java" location="org.ofbiz.banyan.service.SinkService" invoke="removeSink">
        <description>remove sink service</description>
        <attribute name="sinkId" type="String" mode="IN" optional="false" />
    </service>

    <service name="testSoapService" engine="java" location="org.ofbiz.banyan.service.QueueService" invoke="testSoapService"
             export="true">
        <description>test soap service</description>
        <attribute name="results" type="java.util.List" mode="OUT" optional="false" />
    </service>
    
</services>